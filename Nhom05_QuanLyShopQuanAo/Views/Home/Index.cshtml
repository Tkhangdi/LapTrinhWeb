                            <a href="#tab4" data-toggle="tab" class="tab-link" style="background-color:#f66f6f" data-handle="so-mi">Đồ thể thao</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="tab-content tabs-products">
                <!-- Tab 1 -->
                <div class="tab-item active" id="tab1">
                    <div class="listProduct-carousel--overflow">
                        <div class="custom-nav" style="padding-bottom:5px">
                            <span class="prev"><i class="fa-solid fa-forward fa-rotate-180 fa-xl"></i></span>
                            <span class="next" style="float:right"><i class="fa-solid fa-forward fa-xl"></i></span>
                        </div>
                        <div class="product-grid">
                            @foreach (var product in ViewBag.Tab1Products)
                            {
                                <div class="product-card">
                                    <div class="product-image">
                                        <a href="@Url.Action("DetailSanPham", "Home", new { id = product.MaSanPham })">
                                            <img src="/images/QuanAo/@product.Anh" alt="@product.TenSanPham" />
                                        </a>
                                    </div>
                                    <div class="product-info">
                                        <h3 class="product-title">@product.TenSanPham</h3>
                                        <p class="product-price">@String.Format("{0:0,00} đ", product.Gia)</p>
                                        <a href="@Url.Action("DetailSanPham", "Home", new { id = product.MaSanPham })" class="btn btn-primary">
