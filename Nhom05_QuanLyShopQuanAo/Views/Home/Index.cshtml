<body>
    <div class="custom-container">
        <div class="container">
            <div class="wrapper-heading-home">
                <h2 class="subheading" style="margin-top:30px;margin-bottom:30px">SẢN PHẨM </h2>
                <div class="tab-title">
                    <ul class="box-tabs tabbernav_product" id="ajax-tab-collection">
                        <li style="padding-right:30px">
                            <a href="#tab1" data-toggle="tab" class="tab-link" style="background-color:#f66f6f" data-handle="ao-khoac">Áo</a>
                        </li>
                        <li style="padding-right:30px">
                            <a href="#tab2" data-toggle="tab" class="tab-link" style="background-color:#f66f6f" data-handle="ao-thun">Quần</a>
                        </li>
                        <li style="padding-right:30px">
                            <a href="#tab3" data-toggle="tab" class="tab-link" style="background-color:#f66f6f" data-handle="quan-short">Áo Khoác</a>
                        </li>
